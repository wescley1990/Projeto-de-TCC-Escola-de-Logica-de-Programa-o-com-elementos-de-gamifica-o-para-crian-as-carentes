@page
@using TCC.UI.Web.Areas.Identity.Pages.Login;
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueci minha senha | LogPlay";
}
@{
    Layout = "";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Login/forgotPassword.css" asp-append-version="true" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="main-forgot-password">
        <div class="left-forgot-password">
            <h1>VAMOS TE AJUDAR</h1></><br>
            <p>Informe seu endereço cadastrado e você receberá um link por email</p>
            <img src="~/assets//img/Login/forgot-password-animate.svg"/>
            <div class="back-link">
                <a asp-page="./Home/Index">Voltar para a home</a>
            </div>
        </div>
        <div class="right-forgot-password">
            <form class="card-forgot-password" method="post">
                <h1>Esqueceu sua senha?</h1>
                <div class="text-field">
                    <label>Email</label>
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" autofocus />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <button id="login-submit" type="submit" name="login-button" class="botao-reset-pwd">Trocar minha senha</button>

            </form>
        </div>
    </div>
</body>

<partial name="_ValidationScriptsPartial" />
<script src="../node_modules/scrollreveal/dist/scrollreveal.min.js" asp-append-version="true"></script>
<script src="~/js/Login/forgotPassword.js"></script>

